/* 去除默认样式 */
body,
h1,
h2,
h3,
h4,
h5,
h6,
p,
ul,
ol,
li,
dl,
dt,
dd,
input,
view{
    margin: 0;
    padding: 0;
}




ul,ol{
    list-style: none;
}

em,i{
    font-style:normal;
}

a{
    text-decoration: none;
    color: #333;
}

img{
    width: 100%;
    vertical-align: middle;
}

input{
    border: none;
    outline: none;
    color: #333;
}

.fl{
    float: left;
}

.fr{
    float: right;
}

.clearfix::before,
.clearfix::after{
    content: "";
    display: table;
}
.clearfix::after{
    clear: both;
}

.ziti{
    font-size: 25rpx;
    color: gray;
}